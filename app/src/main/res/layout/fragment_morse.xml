<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.fragments.MorseFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.2" />


    <TextView
        android:id="@+id/tvShowingChar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@android:color/darker_gray"
        android:gravity="center_vertical|center_horizontal"
        android:text="xxxx"
        android:textSize="50sp"

        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_qwery"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/tvWorth"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <LinearLayout
            android:id="@+id/llrow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnChar1"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="1"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar2"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="2"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar3"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="3"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar4"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="4"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar5"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="5"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar6"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="6"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar7"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="7"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar8"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="8"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnChar9"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="9"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharNull"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="0"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llrow4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llrow3"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnCharZ"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="Z"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharX"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="X"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharC"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="C"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharV"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="V"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharB"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="B"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharN"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="N"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharM"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="M"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharComma"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text=","
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharDot"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="."
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharQuestionMark"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="@string/questionMark"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llrow3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llrow2"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnCharA"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="A"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharS"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="S"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharD"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="D"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharF"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="F"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharG"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="G"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharH"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="H"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharJ"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="J"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharK"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="K"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharL"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="L"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharEqually"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="="
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/llrow2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llrow1"
            tools:ignore="MissingConstraints">

            <Button
                android:id="@+id/btnCharQ"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="Q"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharW"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="W"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharE"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="E"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharR"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="R"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharT"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="T"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharY"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="Y"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharU"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="U"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharI"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="I"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharO"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="O"
                android:textSize="10sp" />

            <Button
                android:id="@+id/btnCharP"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="P"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/llrow4">

            <Button
                android:id="@+id/btnRepeat"
                android:layout_width="216dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="repeat question"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="478dp" />

            <Button
                android:id="@+id/btnCharSlash"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_margin="2dp"
                android:background="@drawable/roundedbutton"
                android:text="/"
                android:textSize="10sp"
                tools:layout_editor_absoluteX="100dp"
                tools:layout_editor_absoluteY="478dp" />


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvShowingMorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:gravity="center"
        android:text="------------------------"
        android:textSize="20dp"
        android:visibility="invisible"

        app:layout_constraintBottom_toBottomOf="@+id/switchNMorse"
        app:layout_constraintStart_toEndOf="@+id/switchNMorse"
        app:layout_constraintTop_toTopOf="@+id/switchNMorse"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tvWorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="worth : х%"
        app:layout_constraintBaseline_toBaselineOf="@+id/tvCountShowedSymbols"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvCountShowedSymbols"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:paddingLeft="8dp"
        android:text="count : 0"
        app:layout_constraintBottom_toTopOf="@+id/switchNMorse"
        app:layout_constraintStart_toEndOf="@+id/tvWorth"
        app:layout_constraintTop_toTopOf="@+id/btnStop" />


    <Button
        android:id="@+id/btnStop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        style="?attr/materialButtonOutlinedStyle"
        android:text="stop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline14"
        app:layout_constraintTop_toTopOf="@+id/guideline13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="60dp" />

    <Switch
        android:id="@+id/switchNMorse"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="code"
        app:layout_constraintBottom_toBottomOf="@+id/btnStop"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.7" />


</androidx.constraintlayout.widget.ConstraintLayout>