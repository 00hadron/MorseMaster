<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.fragments.MorseFragment">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />


    <TextView
        android:id="@+id/tvShowingChar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:background="@android:color/darker_gray"
        android:gravity="center"
        android:text="x"
        android:textSize="116sp"
        app:layout_constraintBottom_toTopOf="@+id/guideline2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.343"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/llrow1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_margin="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline2">

        <Button
            android:id="@+id/btnChar1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="1"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnChar2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="2"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnChar3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="3"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnChar4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="4"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnChar5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="5"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnChar6"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="6"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnChar7"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="7"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnChar8"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="8"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp" />

        <Button
            android:id="@+id/btnChar9"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="9"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharNull"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="0"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llrow2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llrow1">

        <Button
            android:id="@+id/btnCharQ"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="Q"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharW"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="W"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharE"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="E"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharR"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="R"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharT"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="T"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharY"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="Y"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharU"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="U"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharI"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="I"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharO"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="O"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharP"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="P"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llrow3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llrow2">

        <Button
            android:id="@+id/btnCharA"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="A"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharS"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="S"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharD"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="D"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharF"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="F"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharG"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="G"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharH"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="H"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharJ"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="J"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharK"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="K"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharL"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="L"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharEqually"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="="
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/llrow4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/llrow3">

        <Button
            android:id="@+id/btnCharZ"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="Z"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"
            />

        <Button
            android:id="@+id/btnCharX"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="X"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharC"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="C"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharV"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="V"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharB"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="B"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharN"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="N"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharM"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="M"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharComma"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text=","
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharDot"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text="."
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

        <Button
            android:id="@+id/btnCharQuestionMark"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:text=" ?"
            android:textSize="10sp"
            android:background="@drawable/roundedbutton"
            android:layout_margin="2dp"/>

    </LinearLayout>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tvWorth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="worth : х%"
        app:layout_constraintBaseline_toBaselineOf="@+id/btnStop"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>